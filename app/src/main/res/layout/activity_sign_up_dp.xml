<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".register.signup.SignUpDpActivity">

    <!-- Welcome Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_givegrub"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/primary_the_darkest_color"
        android:gravity="center"/>

    <!-- Subtitle/Instruction -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/let_s_create_a_profile_that_shows_you_re_here_to_help"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/primary_the_darkest_color"
        android:gravity="center"/>

    <!-- Profile Image Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/defdp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/profile_image"
            android:background="?android:selectableItemBackground"
            android:padding="4dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Image Prompt -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_photo_to_represent_your_generous_spirit"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/primary_the_darkest_color"
        android:gravity="center"/>

    <!-- Pick from Gallery Button -->
    <Button
        android:id="@+id/pickButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/primary_the_darkest_color"
        android:text="@string/pick_from_gallery"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center"
        android:padding="12dp"
        android:elevation="4dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/primary_the_darkest_color" />

    <!-- Motivational Quote -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/together_let_s_make_a_difference"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:textColor="@color/primary_the_darkest_color"
        android:gravity="center"/>
</LinearLayout>

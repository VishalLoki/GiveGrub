<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="65dp"
    android:background="@color/lite_white">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="User Name"
        android:textSize="14sp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/primary_the_darkest_color"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_message_incoming"
        android:padding="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/food_available"
                android:layout_centerInParent="true"
                android:textColor="@color/primary_the_darkest_color"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                android:textAlignment="center"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/foodItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burgers"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"/>
        <TextView
            android:id="@+id/venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venkatapuram"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"/>
        <TextView
            android:id="@+id/peopleCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="3"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="start"/>
        <TextView
            android:id="@+id/acceptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_accept_to_accept_the_order"
            android:textColor="@color/primary_the_darkest_color"
            android:textSize="12sp"
            android:textStyle="italic"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="12:30pm"
        android:textSize="10sp"
        android:gravity="bottom"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/darker_gray"/>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_rounded_corners">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Group Details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/primary_the_darkest_color"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp" />

    <ImageButton
        android:id="@+id/groupImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/defimage"
        android:scaleType="fitCenter"
        android:elevation="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Group Image" />


    <EditText
        android:id="@+id/groupNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter group name"
        android:textColor="@color/black"
        android:padding="10dp" />

    <EditText
        android:id="@+id/groupDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        android:textColor="@color/black"
        android:padding="10dp" />

    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:text="Start Group" />
</LinearLayout>

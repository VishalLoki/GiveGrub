<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the EditText -->
    <solid android:color="@android:color/white" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border/Stroke around the EditText -->
    <stroke
        android:width="1.5dp"
        android:color="@color/primary_the_darkest_color" />

    <!-- Padding inside the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
